# Development Environment Variables for Modular Content System
# Copy to .env.local for local development

# === CONTENT SYSTEM CONFIGURATION ===
NEXT_PUBLIC_USE_MODULAR_CONTENT=true
NEXT_PUBLIC_CONTENT_VERSION=1.0.0-dev
NEXT_PUBLIC_ENVIRONMENT=dev

# === API CONFIGURATION ===
NEXT_PUBLIC_CONTENT_API_BASE=/api/content

# === SECURITY ===
# Very permissive for development
ALLOWED_ORIGINS=*
RATE_LIMIT_ENABLED=false

# === PERFORMANCE ===
# No caching/compression for development
ENABLE_CONTENT_COMPRESSION=false
ENABLE_CONTENT_CDN=false
ENABLE_CACHE_OPTIMIZATION=false

# Very short cache durations for development
CACHE_DURATION_CORE=60000        # 1 minute
CACHE_DURATION_PAGES=30000       # 30 seconds
CACHE_DURATION_COMPONENTS=15000  # 15 seconds

# === MONITORING & LOGGING ===
ENABLE_ERROR_TRACKING=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CONTENT_ANALYTICS=false

# === FEATURE FLAGS ===
FEATURE_FLAG_LAZY_LOADING=true
FEATURE_FLAG_ENVIRONMENT_OVERRIDES=true
FEATURE_FLAG_CONDITIONAL_LOADING=true
FEATURE_FLAG_PERFORMANCE_OPTIMIZATION=false
FEATURE_FLAG_BACKWARD_COMPATIBILITY=true
FEATURE_FLAG_CONTENT_VALIDATION=true
NEXT_PUBLIC_LAZY_V2=false

# === BUILD CONFIGURATION ===
BUILD_ID=dev-build-local
NODE_ENV=development

# === DEVELOPMENT & DEBUGGING ===
ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_CONTENT_INSPECTOR=true
ENABLE_MODULE_INSPECTOR=true
ENABLE_COMPOSITION_DEBUGGING=true
LOG_CACHE_OPERATIONS=true
LOG_MODULE_LOADING=true
LOG_LEVEL=debug

# === HOT RELOAD & DEVELOPMENT ===
FAST_REFRESH=true
NEXT_TELEMETRY_DISABLED=1