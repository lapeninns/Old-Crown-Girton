# Staging Environment Variables for Modular Content System
# Copy to .env.staging for staging deployment

# === CONTENT SYSTEM CONFIGURATION ===
NEXT_PUBLIC_USE_MODULAR_CONTENT=true
NEXT_PUBLIC_CONTENT_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=staging

# === API CONFIGURATION ===
NEXT_PUBLIC_CONTENT_API_BASE=/api/content

# === SECURITY ===
# More permissive for testing
ALLOWED_ORIGINS=https://staging.yourrestaurant.com,http://localhost:3000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_WINDOW_MS=60000

# === PERFORMANCE ===
# Moderate caching for testing
ENABLE_CONTENT_COMPRESSION=true
ENABLE_CONTENT_CDN=false
ENABLE_CACHE_OPTIMIZATION=true

# Shorter cache durations for faster testing
CACHE_DURATION_CORE=900000       # 15 minutes
CACHE_DURATION_PAGES=300000      # 5 minutes  
CACHE_DURATION_COMPONENTS=180000 # 3 minutes

# === MONITORING & LOGGING ===
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CONTENT_ANALYTICS=false

# === FEATURE FLAGS ===
FEATURE_FLAG_LAZY_LOADING=true
FEATURE_FLAG_ENVIRONMENT_OVERRIDES=true
FEATURE_FLAG_CONDITIONAL_LOADING=true
FEATURE_FLAG_PERFORMANCE_OPTIMIZATION=true
FEATURE_FLAG_BACKWARD_COMPATIBILITY=true
FEATURE_FLAG_CONTENT_VALIDATION=true  # Enable for testing

# === BUILD CONFIGURATION ===
BUILD_ID=staging-build-$(date +%Y%m%d-%H%M%S)
NODE_ENV=staging

# === TESTING & DEBUGGING ===
ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_METRICS=true
ENABLE_CONTENT_INSPECTOR=true
LOG_LEVEL=debug