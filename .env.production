# Production Environment Variables for Modular Content System
# Copy to .env.production for production deployment

# === CONTENT SYSTEM CONFIGURATION ===
NEXT_PUBLIC_USE_MODULAR_CONTENT=true
NEXT_PUBLIC_CONTENT_VERSION=1.0.0
NEXT_PUBLIC_ENVIRONMENT=prod

# === API CONFIGURATION ===
# Content API base URL (use CDN in production)
NEXT_PUBLIC_CONTENT_API_BASE=/api/content
CONTENT_CDN_URL=https://cdn.yourrestaurant.com/content

# === SECURITY ===
# Allowed origins for CORS (production domains only)
ALLOWED_ORIGINS=https://yourrestaurant.com,https://www.yourrestaurant.com
# API rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# === PERFORMANCE ===
# Enable caching and compression
ENABLE_CONTENT_COMPRESSION=true
ENABLE_CONTENT_CDN=true
ENABLE_CACHE_OPTIMIZATION=true

# Cache durations (in milliseconds)
CACHE_DURATION_CORE=1800000      # 30 minutes for core content
CACHE_DURATION_PAGES=600000      # 10 minutes for page content
CACHE_DURATION_COMPONENTS=300000 # 5 minutes for components

# CDN configuration
CDN_CACHE_MAX_AGE=7200          # 2 hours
CDN_STALE_WHILE_REVALIDATE=86400 # 24 hours

# === MONITORING & LOGGING ===
# Error tracking
ENABLE_ERROR_TRACKING=true
ERROR_TRACKING_ENDPOINT=https://api.yourmonitoring.com/errors
ERROR_TRACKING_API_KEY=your_error_tracking_key

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_TRACKING_ENDPOINT=https://api.yourmonitoring.com/performance

# Content analytics
ENABLE_CONTENT_ANALYTICS=true
ANALYTICS_ENDPOINT=https://api.youranalytics.com/content

# === DATABASE/STORAGE ===
# If using external content storage
CONTENT_STORAGE_TYPE=filesystem  # filesystem | s3 | cloudinary
CONTENT_STORAGE_BASE_PATH=/app/config/content

# For S3 storage (if needed)
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-content-bucket
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# === FEATURE FLAGS ===
FEATURE_FLAG_LAZY_LOADING=true
FEATURE_FLAG_ENVIRONMENT_OVERRIDES=true
FEATURE_FLAG_CONDITIONAL_LOADING=true
FEATURE_FLAG_PERFORMANCE_OPTIMIZATION=true
FEATURE_FLAG_BACKWARD_COMPATIBILITY=true
FEATURE_FLAG_CONTENT_VALIDATION=false  # Disable in prod for performance

# === BUILD CONFIGURATION ===
BUILD_ID=production-build-$(date +%Y%m%d-%H%M%S)
NODE_ENV=production

# === THIRD-PARTY INTEGRATIONS ===
# Google Analytics (if used for content tracking)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ENVIRONMENT=production

# === BACKUP & RECOVERY ===
# Content backup configuration
ENABLE_CONTENT_BACKUP=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups/content

# === COMPLIANCE & SECURITY ===
# GDPR compliance
ENABLE_GDPR_COMPLIANCE=true
COOKIE_CONSENT_REQUIRED=true

# Security headers
ENABLE_SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true
CSP_REPORT_URI=https://api.yoursite.com/csp-report