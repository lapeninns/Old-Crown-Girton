{
  "name": "button-tokens",
  "version": "1.0.0",
  "description": "Button design tokens extracted from theme/colors.js for light and dark themes",
  "tokens": {
    "sizes": {
      "sm": { "height": "36px", "minWidth": "96px", "fontSize": "14px", "padding": "8px 16px" },
      "md": { "height": "44px", "minWidth": "120px", "fontSize": "16px", "padding": "12px 24px" },
      "lg": { "height": "56px", "minWidth": "160px", "fontSize": "18px", "padding": "16px 32px" }
    },
    "borderRadius": "8px",
    "focus": {
      "ringWidth": "4px",
      "ringColor": "--color-primary"
    },
    "states": ["default","hover","active","focus","disabled"],
    "loading": {
      "indicatorColor": "#ffffff",
      "indicatorSize": "16px",
      "ariaLabel": "Loading"
    },
    "variants": {
      "primary": {
        "light": {
          "bg": "var(--color-primary)",
          "color": "#ffffff",
          "bgHover": "var(--color-primaryAccent)",
          "border": "transparent"
        },
        "dark": {
          "bg": "var(--color-brass-700)",
          "color": "#ffffff",
          "bgHover": "var(--color-brass-800)",
          "border": "transparent"
        }
      },
      "secondary": {
        "light": {
          "bg": "var(--color-secondary)",
          "color": "#ffffff",
          "bgHover": "var(--color-secondary-700)",
          "border": "transparent"
        },
        "dark": {
          "bg": "var(--color-chakra-700)",
          "color": "#ffffff",
          "bgHover": "var(--color-chakra-800)",
          "border": "transparent"
        }
      },
      "accent": {
        "light": {
          "bg": "var(--color-crimson-500)",
          "color": "#ffffff",
          "bgHover": "var(--color-crimson-600)",
          "border": "transparent"
        },
        "dark": {
          "bg": "var(--color-crimson-700)",
          "color": "#ffffff",
          "bgHover": "var(--color-crimson-800)",
          "border": "transparent"
        }
      },
      "outline": {
        "light": {
          "bg": "transparent",
          "color": "var(--color-primary)",
          "border": "1px solid var(--color-primary)",
          "bgHover": "var(--color-primary)",
          "colorHover": "#ffffff"
        },
        "dark": {
          "bg": "transparent",
          "color": "var(--color-primary)",
          "border": "1px solid var(--color-primary)",
          "bgHover": "var(--color-primary)",
          "colorHover": "#ffffff"
        }
      },
      "ghost": {
        "light": { "bg": "transparent", "color": "var(--color-primary)", "bgHover": "var(--color-primary-50)" },
        "dark": { "bg": "transparent", "color": "var(--color-primary)", "bgHover": "rgba(255,255,255,0.04)" }
      },
      "link": {
        "light": { "bg": "transparent", "color": "var(--color-primary)", "textDecoration": "underline" },
        "dark": { "bg": "transparent", "color": "var(--color-primary)", "textDecoration": "underline" }
      },
      "destructive": {
        "light": { "bg": "var(--color-crimson-600)", "color": "#ffffff", "bgHover": "var(--color-crimson-700)" },
        "dark": { "bg": "var(--color-crimson-700)", "color": "#ffffff", "bgHover": "var(--color-crimson-800)" }
      }
    }
  }
}
