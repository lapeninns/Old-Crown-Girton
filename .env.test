# Test Environment Variables
# These variables are loaded automatically in test environments

NODE_ENV=test
NEXT_PUBLIC_TEST_MODE=true

# Disable external API calls in tests
NEXT_PUBLIC_DATA_BASE_URL=

# Test database/storage settings
TEST_DATABASE_URL=sqlite::memory:

# Disable analytics in tests
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_CRISP_WEBSITE_ID=

# Mock external service credentials
STRIPE_SECRET_KEY=sk_test_mock_key
MAILGUN_API_KEY=test_mailgun_key
SUPABASE_URL=https://test.supabase.co
SUPABASE_ANON_KEY=test_anon_key

# Test-specific feature flags
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_DEBUG_LOGGING=true

# Cache settings for tests
CACHE_TTL=1000
CACHE_MAX_SIZE=100